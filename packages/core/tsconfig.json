{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist/esm",
    "strict": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "typedocOptions": {
    "out": "../docs/build/api",
    "readme": "none",
    "excludeExternals": true,
    "excludePrivate": true
  }
}
