{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "paths": {
    "@maxgraph/core": ["packages/core/src/index.ts"],
    "@maxgraph/ts-example": ["packages/ts-example/src/main.ts"]
